# SOA One Configuration
DATABASE_URL="file:./soa-one.db"
PORT=4000
NODE_ENV=development

# Security — REQUIRED in production (min 32 characters)
JWT_SECRET=change-me-to-a-secure-random-string-in-production

# CORS — comma-separated allowed origins (production only)
CORS_ORIGIN=https://app.soaone.com

# Redis (optional — for production message queue)
REDIS_URL=redis://localhost:6379

# GraphQL
GRAPHQL_PATH=/graphql

# Rule Execution API
API_PREFIX=/api/v1

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
