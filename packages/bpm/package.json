    "bpm",
    "process-management",
    "workflow",
    "gateways",
    "swimlanes",
    "soa",
    "zero-dependency"
  ],
  "license": "MIT",
  "author": "SOA One",
  "repository": {
    "type": "git",
    "url": "https://github.com/soa-one/soa-one.git",
