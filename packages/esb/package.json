{
  "name": "@soa-one/esb",
  "version": "1.0.0",
  "description": "Zero-dependency Enterprise Service Bus module for SOA One. Content-based routing, message transformation, protocol mediation, EIP patterns, resilience, saga orchestration, and full @soa-one/engine integration.",
  "keywords": [
    "esb",
    "enterprise-service-bus",
    "message-routing",
    "message-transformation",
    "eip",
    "saga",
    "circuit-breaker",
    "soa",
    "zero-dependency"
  ],
  "license": "MIT",
  "author": "SOA One",
  "repository": {
    "type": "git",
    "url": "https://github.com/soa-one/soa-one.git",
    "directory": "packages/esb"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./bus": {
      "types": "./dist/bus.d.ts",
      "import": "./dist/bus.js",
      "require": "./dist/bus.js"
    },
    "./channel": {
      "types": "./dist/channel.d.ts",
      "import": "./dist/channel.js",
      "require": "./dist/channel.js"
    },
    "./router": {
      "types": "./dist/router.d.ts",
      "import": "./dist/router.js",
      "require": "./dist/router.js"
    },
    "./transformer": {
      "types": "./dist/transformer.d.ts",
      "import": "./dist/transformer.js",
      "require": "./dist/transformer.js"
    },
    "./patterns": {
      "types": "./dist/patterns.d.ts",
      "import": "./dist/patterns.js",
      "require": "./dist/patterns.js"
    },
    "./resilience": {
      "types": "./dist/resilience.d.ts",
      "import": "./dist/resilience.js",
      "require": "./dist/resilience.js"
    },
    "./saga": {
      "types": "./dist/saga.d.ts",
      "import": "./dist/saga.js",
      "require": "./dist/saga.js"
    },
    "./plugin": {
      "types": "./dist/plugin.d.ts",
      "import": "./dist/plugin.js",
      "require": "./dist/plugin.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "tsc && node --test dist/**/*.test.js",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "typescript": "^5.9.3"
  }
}
